{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -p -v -i run dev",
    "build": "yarn workspaces foreach -p -v -i run build",
    "test": "yarn workspaces foreach -p -v -i run test",
    "web": "yarn workspace web dev",
    "web:build": "yarn workspace web build",
    "web:start": "yarn workspace web start",
    "web:lint": "yarn workspace web lint",
    "web:test": "yarn workspace web test",
    "web:test:ci": "yarn workspace web test:ci",
    "web:cypress": "yarn workspace web cypress",
    "studio": "yarn workspace studio dev",
    "studio:format": "prettier-eslint --write \"**/*.js\" \"!node_modules/**\"",
    "studio:build": "sanity build",
    "studio:graphql-deploy": "sanity graphql deploy --playground",
    "studio:lint": "eslint .",
    "studio:test": "sanity check"
  },
  "name": "enevoldsen.io",
  "packageManager": "yarn@3.2.4"
}
